#/bin/sh
DIR="$ADEM_HOME"
USER=`whoami`
VO=$1
SITE=$2
APP=$3
SigB=$4

  globus-url-copy  file://$DIR/mpich-$SigB.tar.gz  gsiftp://$SITE$APP/$VO/$USER/mpich-$SigB.tar.gz
  globus-job-run  $SITE /bin/tar -C $APP/$VO/$USER $APP/$VO/$USER/mpich-$SigB.tar.gz && globus-job-run  $SITE /bin/rm -f $APP/$VO/$USER/mpich-$SigB.tar.gz


